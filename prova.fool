let
  /* 1. Dichiarazione della Classe */
  class Cane (eta:int) {
    /* Metodo che restituisce true se il cane è cucciolo (< 2 anni) */
    fun isCucciolo:bool ()
      eta <= 2;
  }

  /* 2. Creazione dell'oggetto (Istanziazione) */
  var fido:Cane = new Cane(4);
in
  /* 3. Utilizzo dell'oggetto nel corpo principale */
  print (
    if fido.isCucciolo()
    then { 1 }   /* Stampa 1 se è cucciolo */
    else { 0 }   /* Stampa 0 se è adulto */
  );